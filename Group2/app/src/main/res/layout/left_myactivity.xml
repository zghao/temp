<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/left_myactivity_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FF18B4EC">

        <Button
            android:id="@+id/left_myactivity_btback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left" />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/left_myactivity_btfocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_left_selected"
                android:text="关注"
                android:textSize="15sp"
                android:textColor="#FF18B4EC"/>
            <Button
                android:id="@+id/left_myactivity_btjoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_right_notselected"
                android:text="参与"
                android:textSize="15sp"
                android:textColor="#FFFFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/left_myactivity_fl"
        android:layout_below="@id/left_myactivity_rl"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</RelativeLayout>