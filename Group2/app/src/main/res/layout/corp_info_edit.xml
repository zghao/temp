<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/corpmanage_detail_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FF18B4EC">

        <Button
            android:id="@+id/corpmanage_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/corpmanage_detail_ll"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@id/corpmanage_detail_rl"
        android:gravity="center"
        android:background="@drawable/back2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/corpmanage_detail_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/heh" />

        <EditText
            android:id="@+id/corpmanage_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/black_cursor"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:text="文学社" />

        <EditText
            android:id="@+id/corpmanage_detail_shortintro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textCursorDrawable="@drawable/black_cursor"
            android:background="@null"
            android:text="提高大家的文学鉴赏水平"
            android:textSize="12sp" />


    </LinearLayout>
    <TextView
        android:id="@+id/corpmanage_detail_tv"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FFABABAB"
        android:layout_below="@id/corpmanage_detail_ll"/>
    <LinearLayout
        android:id="@+id/corpmanage_detail_llbt"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/corpmanage_detail_btNotice"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:background="#FFFFFFFF"
            android:drawableTop="@drawable/save"
            android:text="保存"
            android:textSize="12sp" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/corpmanage_detail_sv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/corpmanage_detail_tv"
        android:layout_above="@id/corpmanage_detail_llbt">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="标签" />

                <EditText
                    android:id="@+id/corpmanage_detail_tvtag"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:text="文学   审美   耐心"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:background="@null"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFABABAB" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="社团地址" />

                <EditText
                    android:id="@+id/corpmanage_detail_tvaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:background="@null"
                    android:text="软件园校区5区302"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFABABAB" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="社团简介" />

                <EditText
                    android:id="@+id/corpmanage_detail_tvintro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:background="@null"
                    android:text="致力于新一代文学的弘扬和发展，吸纳各方面人才，提供优良的学习环境和交流场所。结合诗词曲赋、散文、小说、现代诗歌、楹联、书法等与一体正规化社会团体。"
                    android:ellipsize="end"
                    android:maxLines="4" />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFABABAB" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:text="图片" />

                <ImageView
                    android:id="@+id/corpmanage_detail_pic1"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/image_hint"/>
                <ImageView
                    android:id="@+id/corpmanage_detail_pic2"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/image_hint"/>
                <ImageView
                    android:id="@+id/corpmanage_detail_pic3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/arrow_right_black"/>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFABABAB" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="视频" />

                <ImageView
                    android:id="@+id/corpmanage_detail_video"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/image_hint"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>